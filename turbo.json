{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "globalPassThroughEnv": ["*"],
  "tasks": {
    "build": {
      "dependsOn": ["^scrape", "^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "scrape": {
      "dependsOn": ["build","setup"],
      "cache": false
    },
    "scrape:update": {
      "cache": false
    },
    "setup": {
      "cache": false      
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}
