{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "globalPassThroughEnv": ["*"],
  "tasks": {
    "scrape": {
      "dependsOn": ["setup"],
      "outputs": ["dist/**"]
    },
    "setup": {
      "cache": true,
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["^scrape", "^build"],
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}
